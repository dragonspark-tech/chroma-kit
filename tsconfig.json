{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "useDefineForClassFields": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*", "./test/**/*"]
}