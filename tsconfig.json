{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "./src/**/*",
    "!src/__tests__/**/*.ts",
    "!src/**/*.test.*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
