{
  "name": "@dragonspark/chroma-kit",
  "description": "A modern, lightweight and blazingly fast color manipulation library.",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragonspark-tech/chroma-kit.git"
  },
  "bugs": "https://github.com/dragonspark-tech/chroma-kit/issues",
  "contributors": [
    {
      "name": "David S. García (Azæl)",
      "email": "azael@dragonspark.io",
      "url": "https://github.com/azaeldragon"
    }
  ],
  "keywords": [
    "dragonspark",
    "color",
    "parser",
    "convert",
    "tiny",
    "hex",
    "rgb",
    "delta-e",
    "xyz",
    "hsl",
    "hsv",
    "hwb",
    "lab",
    "lch",
    "css"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": [
      {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "./dist/index.js"
    ],
    "./fn": [
      {
        "types": "./dist/fn.d.ts",
        "import": "./dist/fn.js",
        "require": "./dist/fn.js"
      },
      "./dist/fn.js"
    ],
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "dist/index.js",
    "src/conversion/register-all-conversions.ts",
    "src/semantics/register-all-parsers.ts"
  ],
  "scripts": {
    "build": "rimraf ./dist ./tsup && tsup --config tsup.config.ts && rimraf .tsup",
    "build:precomputed": "jiti ./toolchain/build.ts",
    "build:docs": "typedoc --options typedoc.json",
    "test": "vitest run --config vitest.config.ts",
    "coverage": "vitest run --config vitest.config.ts --coverage"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.8",
    "@types/node": "^22.15.18",
    "@vitest/coverage-istanbul": "3.1.4",
    "@vitest/ui": "^3.1.4",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  }
}
